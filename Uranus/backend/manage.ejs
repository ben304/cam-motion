<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>管理界面</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
<p><label for=""> a 玩家：<input type="text" id="player_a" /></label></p>
<p><label for=""> b 玩家：<input type="text" id="player_b" /</label></p>
<p><button id="ready">准备</button> <button id="begin">开始</button></p>

<script>
var socket = io.connect('http://localhost:8081'),
	$ = function(id) { return document.getElementById(id) };

$('ready').addEventListener('click', function(ev){
	socket.emit('ready', {
		namea: $('player_a').value,
		nameb: $('player_b').value
	});
}, false);
$('begin').addEventListener('click', function(ev){
	socket.emit('begin')
}, false);
</script>
</body>
</html>